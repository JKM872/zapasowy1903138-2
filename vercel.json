{
    "buildCommand": "cd sports-dashboard && npm install --legacy-peer-deps && npm run build",
    "outputDirectory": "sports-dashboard/out",
    "installCommand": "echo skip",
    "framework": null,
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://pickly-67e87ed00f70.herokuapp.com/api/:path*"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
            ]
        },
        {
            "source": "/_next/static/(.*)",
            "headers": [
                { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
            ]
        }
    ]
}